<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_form_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/name_placeholder"
        android:inputType="textCapWords"/>

    <EditText
        android:id="@+id/activity_form_student_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:inputType="phone"
        android:hint="@string/telefone_placeholder" />

    <EditText
        android:id="@+id/activity_form_student_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/email_placeholder"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/activity_form_button_student_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/botao_salvar_placeholder"/>
</LinearLayout>